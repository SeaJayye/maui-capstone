<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="maui_capstone.TimerCreate">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Timer Creation Page" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" />
            <Entry Placeholder="Timer Name" Text="{Binding NewTimerName}" />
            <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand">
                <Button Text="-" Command="{Binding DecreaseDurationCommand}" />
                <Label Text="{Binding NewTimerDuration}" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" />
                <Button Text="+" Command="{Binding IncreaseDurationCommand}" />
            </StackLayout>
            <Button Text="Add Timer" Command="{Binding AddTimerCommand}" />
            <Button Text="Back" Clicked="OnBackClicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
