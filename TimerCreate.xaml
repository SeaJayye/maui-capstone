<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="maui_capstone.TimerCreate"
             Title="Don't Burn It!">
    <StackLayout>
        <Label Text="Timer Creation page" />
        <Button Text="Add Timer" Clicked="OnAddTimerClicked" />
        <ListView ItemsSource="{Binding ActiveTimers}"> <!-- Bind to ActiveTimers -->
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal" Spacing="10">
                            <Label Text="{Binding TimerName}" />
                            <Label Text="{Binding RemainingTime, StringFormat='{}{0:hh\\:mm\\:ss}'}" />
                            <Button Text="+" Clicked="OnIncreaseTimeClicked" />
                            <Button Text="-" Clicked="OnDecreaseTimeClicked" />
                            <Button Text="Update Name" Clicked="OnUpdateTimerNameClicked" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>
