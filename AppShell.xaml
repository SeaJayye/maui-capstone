<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="maui_capstone.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:maui_capstone"
    Shell.FlyoutBehavior="Disabled"
    Title="maui_capstone">
    <!-- Page for timer display -->
    <ShellItem Route="TimerPage" Title="Timers">
        <ShellContent ContentTemplate="{DataTemplate local:TimerPage}"/>
    </ShellItem>
    <!-- Page for timer creation -->
    <ShellItem Route="TimerCreate" Title="TimerCreate">
        <ShellContent ContentTemplate="{DataTemplate local:TimerCreate}"/>
    </ShellItem>

</Shell>
